<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/feedback"
    tools:context="app.pickage.com.pickage.MessengerActivities.MessengerDestinationPath">

    <ImageView
    android:id="@+id/viMess"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_check_circle_black_24dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="60dp"
    android:layout_marginBottom="20dp"
    android:layout_centerInParent="true"
    android:layout_gravity="center" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viMess"
        android:layout_marginLeft="60dp"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/checkboxDeliveredPackge"
            android:layout_width="wrap_content"
            android:layout_below="@id/viMess"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/checkboxDeliveredPackge"
            android:layout_below="@id/viMess"
            android:text="The package was delivered"/>
        </LinearLayout>

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/delivery"
        android:layout_marginLeft="60dp"
        android:orientation="horizontal">

        <CheckBox
        android:id="@+id/checkboxNotDeliveredPackge"
        android:layout_width="wrap_content"
        android:layout_below="@id/checkboxDeliveredPackge"
        android:layout_height="wrap_content" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/checkboxNotDeliveredPackge"
        android:layout_below="@id/checkboxDeliveredPackge"
        android:text="The package was not delivered"/>
    </LinearLayout>
</RelativeLayout>

