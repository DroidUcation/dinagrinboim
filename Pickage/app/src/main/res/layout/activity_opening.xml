<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="app.pickage.com.pickage.Opening.Opening"
    style="@style/relativeLayout_style">

        <ImageView
            style="@style/background_opening_img_view"/>

        <TextView
            android:id="@+id/title1_os"
            style="@style/title_text_view"
            android:textStyle="bold"
            android:textSize="@dimen/activity_title1_open"
            android:textColor="@color/orange"
            android:text="@string/title1_activity_opening"/>

        <TextView
            android:id="@+id/title2_os"
            style="@style/title_text_view"
            android:layout_below="@id/title1_os"
            android:textSize="@dimen/activity_title2_open"
            android:textColor="@color/blue"
            android:text="@string/title2_activity_opening"/>

        <TextView
            android:id="@+id/title3_os"
            style="@style/description_app_text_view"
            android:text="@string/text_activity_opening"/>

        <ImageView
            android:id="@+id/logo_img"
            style="@style/img_logo_opening_app"
            android:src="@drawable/logo"/>
</RelativeLayout>