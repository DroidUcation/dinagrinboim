<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/alphabkimg"
    tools:context="app.pickage.com.pickage.MessengerActivities.OpeningMessenger">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:src="@drawable/packages"/>

    <TextView
        android:id="@+id/thereAre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textAllCaps="true"
        android:textStyle="italic"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/turquoise"
        android:text="There are"/>

    <TextView
        android:id="@+id/numOfPackges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/thereAre"
        android:layout_marginLeft="7dp"
        android:textAllCaps="true"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/turquoise"
        android:text=""/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/numOfPackges"
        android:layout_marginLeft="7dp"
        android:textAllCaps="true"
        android:layout_marginTop="30dp"
        android:textColor="@color/turquoise"
        android:textSize="20dp"
        android:text="packages waiting for you .."/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sing up"
        android:background="@color/orange"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>