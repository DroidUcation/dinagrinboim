<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/alphabkimg"
    tools:context="app.pickage.com.pickage.UserActivities.UserCreditCardDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/number"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="15dp"
        android:orientation="horizontal" >

        <TextView
            android:text="@string/number_credit_card_details_activity"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editNumber"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:lines="1"
            android:layout_marginRight="20dp"
            android:maxLines="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/type"
        android:layout_below="@id/number"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="15dp"
        android:orientation="horizontal" >

        <TextView
            android:text="@string/type_credit_card_details_activity"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editType"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:lines="1"
            android:layout_marginRight="20dp"
            android:maxLines="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/name"
        android:layout_below="@id/type"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="15dp"
        android:orientation="horizontal" >

        <TextView
            android:text="@string/name_credit_card_details_activity"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:inputType="text"
            android:lines="1"
            android:layout_marginRight="20dp"
            android:maxLines="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/date"
        android:layout_below="@id/name"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="15dp"
        android:orientation="horizontal" >

        <TextView
            android:text="@string/date_credit_card_details_activity"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:inputType="date"
            android:lines="1"
            android:layout_marginRight="20dp"
            android:maxLines="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/csv"
        android:layout_below="@id/date"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="15dp"
        android:orientation="horizontal" >

        <TextView
            android:text="@string/csv_credit_card_details_activity"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editCsv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:inputType="number"
            android:lines="1"
            android:layout_marginRight="20dp"
            android:maxLines="1" />
    </LinearLayout>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_alignParentBottom="true"
            android:background="@color/orange"
            android:onClick="creditCardDetailsBtnNext"
            android:textAllCaps="true"
            android:text="@string/next_btn_credit_card_details_activity"/>
    </LinearLayout>
    </ScrollView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="7dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_navigate_next_black_24dp"/>
</RelativeLayout>